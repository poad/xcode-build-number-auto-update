{
  "name": "xcode-build-number-auto-update",
  "version": "1.0.1",
  "main": "dist/main.js",
  "repository": "https://github.com/poad/xcode-build-number-auto-update.git",
  "author": "Kenji Saito <ken-yo@mbr.nifty.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "bin": {
    "xcode-update-build-number": "bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts src/*.ts",
    "test": "NODE_ENV=test node --experimental-vm-modules --unhandled-rejections=strict node_modules/.bin/jest --passWithNoTests",
    "package": "ncc build --source-map --license licenses.txt -m -q",
    "clean": "yarn autoclean --force"
  },
  "exports": {
    ".": {
      "node": "./dist/main.js",
      "default": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "devDependencies": {
    "@types/jest": "^28",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.1.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28",
    "prettier": "^2.7.1",
    "ts-jest": "^28",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@actions/core": "^1.9.0",
    "tunnel": "^0.0.6"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "clearMocks": true,
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testMatch": [
      "**/tests/*.test.ts"
    ],
    "transform": {
      "^.+\\.m?(t|j)sx?$": [
        "ts-jest/legacy",
        {
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "tsx": false,
              "decorators": true,
              "dynamicImport": true
            },
            "minify": {
              "compress": {
                "unused": false
              },
              "mangle": false
            },
            "target": "es2021",
            "transform": {
              "optimizer": {
                "jsonify": {
                  "minCost": 0
                }
              }
            }
          },
          "minify": false,
          "sourceMaps": true,
          "inlineSourcesContent": true,
          "module": {
            "type": "commonjs",
            "strict": true,
            "strictMode": true,
            "lazy": true,
            "noInterop": false
          }
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/dist",
      "<rootDir>/node_modules"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true,
        "tsconfig": "tsconfig.json"
      }
    },
    "verbose": true
  }
}
